{
  "name": "baekon-fl-research",
  "displayName": "BÆKON FL Research",
  "description": "Forgotten Language research tools with AI-proof data management",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:baekon.openResearchPanel",
    "onView:baekonExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "baekon.openResearchPanel",
        "title": "Open FL Research Panel",
        "category": "BÆKON"
      },
      {
        "command": "baekon.searchLexicon",
        "title": "Search FL Lexicon",
        "category": "BÆKON"
      },
      {
        "command": "baekon.translateText",
        "title": "Translate FL Text",
        "category": "BÆKON"
      },
      {
        "command": "baekon.refreshVault",
        "title": "Refresh Research Vault",
        "category": "BÆKON"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "baekonExplorer",
          "name": "FL Research",
          "when": "true"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "baekon-research",
          "title": "BÆKON Research",
          "icon": "$(search)"
        }
      ]
    },
    "configuration": {
      "title": "BÆKON FL Research",
      "properties": {
        "baekon.apiUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8787",
          "description": "BÆKON API server URL"
        },
        "baekon.vaultPath": {
          "type": "string",
          "default": "../BAEKON-Research-Vault",
          "description": "Path to research vault"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
